<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <table id="athlete-list">
    <tbody>
      <% athletes.forEach(athlete => { %>
        <tr id="ta-row">
          <td>
            <% if (athlete.creator.equals(user?.profile._id)) { %>
              <form action="/athletes/<%= athlete._id %>?_method=DELETE" method="POST">
                <button class="def-del-btn" type="submit"><img src="/assets/icons/trash-icon.svg" height="25px"></button>
              </form>
            <% } %>
          </td>
        <td><a class="ta-link" href="/athletes/<%= athlete._id %>"><%= athlete.name %></a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% if(user) { %>
  <div>
    <a class="add-link" href="/athletes/new">
      <h3>Add Athlete</h3>
    </a>
  </div>
  <% } %>
</main>

<%- include('../partials/footer') %>