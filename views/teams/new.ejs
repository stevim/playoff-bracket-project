<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/teams/new.css" />
<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>
  <p>Check if the team has already been created:
    <select class="add-team-dropdown">
      <% teams.forEach(function(team) { %>
        <option><%= team.name %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-team-form" action="/teams" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" id="name-input" autocomplete="off">
    <button type="submit">Add Team</button>
  </form>
</main>

<%- include('../partials/footer') %>