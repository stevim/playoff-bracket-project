<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/pages/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Title: </div>
		<div>
      <%= page.title %> 
      <a href="/pages/<%= page._id %>/edit">
        <button>Edit Page</button>
      </a>
    </div>
  </section>
	<%# add to cast form below this comment %>
  <form 
    id="add-teams-to-fav" 
    action="/pages/<%= page._id %>/teams" 
    method="POST"
  >
    <select name="teamId">
      <% teams.forEach(team => { %>
        <option value="<%= team._id %>"><%= team.name %></option>
      <% }) %>
    </select>
    <button type="submit">Add Favourite Teams</button>
  </form>
  <h2>Comments</h2>
  <form 
    id="add-comment-form"
    action="/pages/<%= page._id %>/comments"
    method="POST"
  >
    <label for="content-textarea">Comment:</label>
    <textarea name="content" id="content-textarea"></textarea>
    <button type="submit">Add Comment</button>
  </form>
</main>


<%- include('../partials/footer') %>