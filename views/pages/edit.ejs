<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/pages/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form 
    id="new-form" 
    action="/pages/<%= page._id %>?_method=PUT" 
    method="POST"
  >
    <label for="title-input">Title:</label>
      <input 
        type="text" 
        name="title" 
        value="<%= page.title %>" 
        id="title-input"
      >
    <label for="release-year-input">Release Year:</label>
    <input 
      type="text"
      name="releaseYear"
      value="<%= page.releaseYear %>"
      id="release-year-input"
    >
    <label for="mpaa-rating-select">MPAA Rating</label>
    <select name="mpaaRating" id="mpaa-rating-select" >
      <option value="<%= page.mpaaRating %>"><%= movie.mpaaRating %></option>
      <option value="G">G</option>
      <option value="PG">PG</option>
      <option value="PG-13">PG-13</option>
      <option value="R">R</option>
    </select>
    <label for="now-showing-checkbox">Now Showing:</label>
    <input 
      type="checkbox"
      name="nowShowing"
      id="now-showing-checkbox"
      <%= movie.nowShowing ? "checked" : "" %>
    >
    <button type="submit">Save Movie</button>
  </form>
</main>

<%- include("../partials/footer") %>